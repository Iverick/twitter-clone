<div class="col-6">
  <div class="mb-5">
    <div class="d-flex flex-row align-items-center">
      <%= link_to :back, class: "me-4 text-decoration-none text-black" do %>
        <h3 class="mb-0"><i class="bi bi-arrow-left"></i></h3>
      <% end %>
    <div>
      <h4 class="mb-0"><%= @user.username %></h4>
      <span class="fs-6 text-muted"><%= @user.tweets.count %> Tweets</span>
    </div>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <%= render partial: "shared/avatar", locals: { user: @user, size: 132 }%>
    </div>

    <%= render "follow_button", user: @user, current_user: current_user %>
  </div>

  <%= render "profile/profile_section", user: @user %>
</div>

<div class="col">
  Column
</div>
