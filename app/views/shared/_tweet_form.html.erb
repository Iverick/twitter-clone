<div class="d-flex tweet hover py-3 px-3">
  <div class="flex-shrink-0">
      <%= render "shared/avatar", size: 48 %>
  </div>

  <div class="flex-grow-1 ms-3">
    <%= form_with model: Tweet.new, url: form_submit_path, method: :post, class: "w-100", data: { controller: 'tweet_form' } do |f| %>
      <%= f.text_area :body, placeholder: "What's happening?", class: "form-control tweet-input w-100" %>

      <div class="d-flex justify-content-end mt-2">
        <%= f.submit button_label, class: "btn btn-lg btn-twitter rounded-pill" %>
      </div>
    <% end %>
  </div>
</div>