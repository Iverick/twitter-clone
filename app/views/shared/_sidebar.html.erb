<aside class="side-navbar">
  <%= link_to dashboard_path, class: "d-flex align-items-center fs-4 px-4 mb-2" do %>
    <div class="p-2 rounded-circle">
      <%= image_tag "twitter.png", width: "32" %>
    </div>
  <% end %>

  <%= link_to dashboard_path, class: "d-flex align-items-center fs-4 mb-2 text-decoration-none text-body" do %>
    <div class="px-4 py-2 rounded-pill">
      <span class="position-relative home-icon me-4"><%= image_tag "home.png", width: "28" %></span>
      Home
    </div>
  <% end %>

  <%= link_to "#", class: "d-flex align-items-center fs-4 mb-2 text-decoration-none text-body" do %>
    <div class="px-4 py-2 rounded-pill">
      <span class="position-relative home-icon me-4"><%= image_tag "explore.png", width: "28" %></span>
      Explore
    </div>
  <% end %>

  <%= link_to "#", class: "d-flex align-items-center fs-4 mb-2 text-decoration-none text-body" do %>
    <div class="px-4 py-2 rounded-pill">
      <span class="position-relative home-icon me-4"><%= image_tag "notifications.png", width: "28" %></span>
      Notifications
    </div>
  <% end %>

  <%= link_to "#", class: "d-flex align-items-center fs-4 mb-2 text-decoration-none text-body" do %>
    <div class="px-4 py-2 rounded-pill">
      <span class="position-relative home-icon me-4"><%= image_tag "messages.png", width: "28" %></span>
      Messages
    </div>
  <% end %>

  <%= link_to "#", class: "d-flex align-items-center fs-4 mb-2 text-decoration-none text-body" do %>
    <div class="px-4 py-2 rounded-pill">
      <span class="position-relative home-icon me-4"><%= image_tag "bookmarks.png", width: "28" %></span>
      Bookmarks
    </div>
  <% end %>

  <%= link_to profile_path, class: "d-flex align-items-center fs-4 mb-4 text-decoration-none text-body" do %>
    <div class="px-4 py-2 rounded-pill">
      <span class="position-relative home-icon me-4"><%= image_tag "profile.png", width: "28" %></span>
      Profile
    </div>
  <% end %>

  <div class="d-flex align-items-center fs-4 mb-4 px-3">
    <%= button_tag "Tweet", class: "btn btn-twitter btn-lg w-100 rounded-pill", data: { "bs-toggle": "modal", "bs-target": "#tweet-modal" } %>
  </div>

  <div class="d-flex align-items-center fs-6 px-3">
    <%= link_to destroy_user_session_path, data: { "turbo-method": :delete }, class: "twitter-link" do %>
      <span>Log out @<%= current_user.username %></span>
    <% end %>
  </div>
</aside>

<!-- Tweet Form Modal -->
<div class="modal" id="tweet-modal" tabindex="-1" aria-labelledby="tweet-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <button type="button" class="btn-close mx-0" data-bs-dismiss="modal" aria-label="Close" id="close-modal-btn">
        </button>
      </div>
      <div class="modal-body">
        <%= render "shared/tweet_form", form_submit_path: tweets_path, button_label: "Tweet" %>
      </div>
    </div>
  </div>
</div>
