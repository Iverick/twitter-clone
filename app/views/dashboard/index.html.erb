<div class="container py-2">
  <div class="row">
    <div class="col">
      <% if user_signed_in? %>
        <%= render "shared/sidebar" %>
      <% end %>
    </div>

    <div class="col-6">
      <%= form_with model: Tweet.new, url: tweets_path, method: :post, local: true do |f| %>
        <%= f.text_field :body %>
        <%= f.submit %>
      <% end %>

      <ul>
        <% Tweet.find_each do |tweet| %>
          <li><%= tweet.body %></li>
        <% end %>
      </ul>
    </div>

    <div class="col">
      Column
    </div>
  </div>
</div>
