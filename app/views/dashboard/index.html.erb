<div class="container py-2">
  <div class="row">
    <div class="col">
      <% if user_signed_in? %>
        <%= render "shared/sidebar" %>
      <% end %>
    </div>

    <div class="col-6">
      <div class="mb-4">
        <%= link_to "Home", dashboard_path, class: "fs-5 fw-semibold text-decoration-none text-black" %>
      </div>

      <%= form_with model: Tweet.new, url: tweets_path, method: :post, local: true, class: "w-100" do |f| %>
        <%= f.text_area :body, placeholder: "What's happening?", class: "form-control tweet-input w-100" %>

        <div class="d-flex justify-content-end mt-2">
          <%= f.submit "Tweet", class: "btn btn-lg btn-twitter rounded-pill" %>
        </div>
      <% end %>

      <ul>
        <% Tweet.find_each do |tweet| %>
          <li><%= tweet.body %></li>
        <% end %>
      </ul>
    </div>

    <div class="col">
      Column
    </div>
  </div>
</div>
