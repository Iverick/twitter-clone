<div class="container py-2">
  <div class="row">
    <div class="col">
      <% if user_signed_in? %>
        <%= render "shared/sidebar" %>
      <% end %>
    </div>

    <div class="col-6">
      <div class="mb-4">
        <%= link_to "Home", dashboard_path, class: "fs-5 fw-semibold text-decoration-none text-black" %>
      </div>

      <%= render "shared/tweet_form" %>

      <ul>
        <% Tweet.find_each do |tweet| %>
          <li><%= tweet.body %></li>
        <% end %>
      </ul>
    </div>

    <div class="col">
      Column
    </div>
  </div>
</div>
