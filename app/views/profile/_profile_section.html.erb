<%= turbo_frame_tag "profile-section" do %>
  <div id="profile-section">
    <p class="fs-4 fw-semibold mb-0"><%= current_user.display_name %></p>
    <p>@<%= current_user.username %></p>
    <p><%= current_user.bio %></p>

    <div class="d-flex justify-content-start mb-3">
      <% if current_user.location.present? %>
        <div class="d-flex align-items-center me-4">
          <i class="bi bi-geo-alt fs-5 text-muted me-2"></i>
          <span class="text-muted"><%= current_user.location %></span>
        </div>
      <% end %>

      <% if current_user.url.present? %>
        <div class="d-flex align-items-center me-4">
          <i class="bi bi-link-45deg fs-5 text-muted me-2"></i>
          <span class="text-muted">
            <%= link_to current_user.url, current_user.url, target: :_blank, class: "text-decoration-none" %>
          </span>
        </div>
      <% end %>

      <div class="d-flex align-items-center">
        <i class="bi bi-calendar3 fs-5 text-muted me-2"></i>
        <span class="text-muted">Joined <%= current_user.created_at.strftime("%B %-Y") %></span>
      </div>
    </div>

    <div class="d-flex justify-content-start">
      <div class="me-4">
        <span class="fw-semibold">14</span> Following
      </div>
      <div>
        <span class="fw-semibold">88</span> Followers
      </div>
    </div>
  </div>
<% end %>
