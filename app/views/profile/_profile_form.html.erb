<%= form_with model: current_user, url: profile_path, method: :put, data: { controller: 'tweet-form' }, class: "row g-3" do |f| %>
  <div class="col-md-12">
    <%= f.label :username, class: "form-label" %>
    <%= f.text_field :username, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.label :display_name, class: "form-label" %>
    <%= f.text_field :display_name, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.label :email, class: "form-label" %>
    <%= f.email_field :email, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.label :bio, class: "form-label" %>
    <%= f.text_area :bio, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.label :location, class: "form-label" %>
    <%= f.text_field :location, class: "form-control" %>
  </div>

  <div class="col-md-12">
    <%= f.label :url, class: "form-label" %>
    <%= f.text_field :url, class: "form-control" %>
  </div>

  <div class="col-12">
    <%= f.submit "Save", class: "btn btn-twitter rounded-pill" %>
  </div>
<% end %>
