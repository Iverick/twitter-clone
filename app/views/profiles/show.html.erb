<div class="col-6">
  <div class="mb-5">
    <div class="d-flex flex-row align-items-center">
      <%= link_to :back, class: "me-4 text-decoration-none text-black" do %>
        <h3 class="mb-0"><i class="bi bi-arrow-left"></i></h3>
      <% end %>
    <div>
      <h4 class="mb-0"><%= current_user.username %></h4>
      <span class="fs-6 text-muted"><%= current_user.tweets.count %> Tweets</span>
    </div>
    </div>
  </div>

  <div class="d-flex justify-content-between align-items-center mb-3">
    <div>
      <%= render "shared/avatar", size: 132 %>
    </div>
    <div>
      <%= button_tag "Edit Profile", data: { "bs-toggle": "modal", "bs-target": "#profile-edit-modal" }, class: "btn btn-twitter-outline rounded-pill" %>
    </div>
  </div>

  <div>
    <p class="fs-4 fw-semibold mb-0"><%= current_user.display_name %></p>
    <p>@<%= current_user.username %></p>
    <p><%= current_user.bio %></p>

    <div class="d-flex justify-content-start mb-3">
      <div class="d-flex align-items-center me-4">
        <i class="bi bi-geo-alt fs-5 text-muted me-2"></i>
        <span class="text-muted">Location</span>
      </div>
      <div class="d-flex align-items-center me-4">
        <i class="bi bi-link-45deg fs-5 text-muted me-2"></i>
        <span class="text-muted">URL</span>
      </div>
      <div class="d-flex align-items-center">
        <i class="bi bi-calendar3 fs-5 text-muted me-2"></i>
        <span class="text-muted">Joined <%= current_user.created_at.strftime("%B %-Y") %></span>
      </div>
    </div>
    <div class="d-flex justify-content-start">
      <div class="me-4">
        <span class="fw-semibold">14</span> Following
      </div>
      <div>
        <span class="fw-semibold">88</span> Followers
      </div>
    </div>
  </div>
</div>

<div class="col">
  Column
</div>

<!-- Edit Profile Modal -->
<div class="modal" id="profile-edit-modal" tabindex="-1" aria-labelledby="profile-edit-modal-label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header border-bottom-0">
        <button type="button" class="btn-close mx-0" data-bs-dismiss="modal" aria-label="Close" id="close-modal-btn">
        </button>
      </div>
      <div class="modal-body">
        <h1>Profile Edit Modal</h1>

        <%= render "shared/profile_form" %>
      </div>
    </div>
  </div>
</div>
